<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/articleItemRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="@dimen/card_inner_content_padding"
   >

    <TextView
        android:id="@+id/articleItemTitle"
        style="@style/AppTheme.ArticleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/articleItemDate"
        style="@style/AppTheme.ArticleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/articleItemReference"
        style="@style/AppTheme.ArticleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>